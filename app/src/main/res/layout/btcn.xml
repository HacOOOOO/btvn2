<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/vienedt"
            android:id="@+id/nhap"
            android:gravity="center"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="70sp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgnut"
        android:orientation="vertical"
        android:layout_weight="5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1.25">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/vienbtnxam"
                    android:layout_margin="5sp"
                    android:text="OFF"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/vienbtnxam"
                    android:layout_margin="5sp"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:text="MRC"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5sp"
                    android:background="@drawable/vienbtnxam"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:text="M-"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5sp"
                    android:background="@drawable/vienbtnxam"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:text="M+"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5sp"
                    android:visibility="invisible"
                    android:layout_weight="1"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5sp"
                    android:background="@drawable/vienbtnxam"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:text="%"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5sp"
                    android:background="@drawable/vienbtnxam"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:text="√"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5sp"
                    android:background="@drawable/vienbtnxam"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:text="MC"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5sp"
                    android:background="@drawable/vienbtnxam"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:text="MR"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5sp"
                    android:background="@drawable/vienbtnxam"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:text="÷"
                    android:onClick="casio"
                    android:id="@+id/chia"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="4">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="4">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp"
                        android:background="@drawable/vienbtnxam"
                        android:textSize="30sp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:text="+/-"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp"
                        android:background="@drawable/vienbtntrang"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:text="7"
                        android:onClick="casio"
                        android:id="@+id/bay"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:background="@drawable/vienbtntrang"
                        android:text="8"
                        android:onClick="casio"
                        android:id="@+id/tam"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:text="9"
                        android:onClick="casio"
                        android:id="@+id/chin"
                        android:background="@drawable/vienbtntrang"
                        android:layout_weight="1"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/vienbtnxam"
                        android:layout_margin="5sp"
                        android:textSize="40sp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:text="♪"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:background="@drawable/vienbtntrang"
                        android:text="4"
                        android:onClick="casio"
                        android:id="@+id/bon"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:background="@drawable/vienbtntrang"
                        android:text="5"
                        android:onClick="casio"
                        android:id="@+id/nam"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:background="@drawable/vienbtntrang"
                        android:text="6"
                        android:onClick="casio"
                        android:id="@+id/sau"
                        android:layout_weight="1"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp"
                        android:background="@drawable/vienbtnvang"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:text="CE"
                        android:id="@+id/xoa"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp"
                        android:background="@drawable/vienbtntrang"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:text="1"
                        android:onClick="casio"
                        android:id="@+id/mot"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:background="@drawable/vienbtntrang"
                        android:text="2"
                        android:onClick="casio"
                        android:id="@+id/hai"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:background="@drawable/vienbtntrang"
                        android:layout_margin="5sp"
                        android:text="3"
                        android:onClick="casio"
                        android:id="@+id/ba"
                        android:layout_weight="1"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp"
                        android:background="@drawable/vienbtnvang"
                        android:onClick="casio"
                        android:id="@+id/xoaedt"
                        android:text="ON/C"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:background="@drawable/vienbtntrang"
                        android:text="0"
                        android:onClick="casio"
                        android:id="@+id/khong"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp"
                        android:background="@drawable/vienbtntrang"
                        android:text="."
                        android:onClick="casio"
                        android:id="@+id/cham"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:background="@drawable/vienbtntrang"
                        android:text="="
                        android:onClick="casio"
                        android:id="@+id/bang"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/vienbtnxam"
                        android:layout_margin="5sp"
                        android:textSize="30sp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:text="x"
                        android:onClick="casio"
                        android:id="@+id/nhan"
                        android:layout_weight="1"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/vienbtnxam"
                        android:layout_margin="5sp"
                        android:text="-"
                        android:onClick="casio"
                        android:id="@+id/tru"
                        android:textSize="30sp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_weight="1"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="2">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/vienbtnxam"
                        android:layout_margin="5sp"
                        android:text="+"
                        android:onClick="casio"
                        android:id="@+id/cong"
                        android:textSize="30sp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>